{
  "compilerOptions": {
    "target": "es2022",
    "lib": [
      "es2022"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "rootDir": "./",
    "outDir": "./dist",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "verbatimModuleSyntax": false,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "env/**/*",
    "knexfile.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}